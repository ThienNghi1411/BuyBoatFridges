
<link rel="stylesheet" href="{{ 'header.css' | asset_url }}">
<header class="header">
    <div class="header__inner ">
        <div class="header__userLogin">
            <div class="header__login"><a href="{{ routes.account_login_url }}">{{ 'sections.header.login' | t }}</a></div>
            <div class="header__register"><a href="{{ routes.account_register_url }}">{{ 'sections.header.login' | t }}</a></div>
        </div>
        <div class="header__container">
            <div class="headerMobile__iconMenu">
                <a href="{{ routes.root_url }}" class="">
                    <img src="{{ section.settings.iconMenu | image_url }}" class="headerMobile__iconMenu-icon" />
                </a>
            </div>
            <div class="header__logo">
                <a href="{{ routes.root_url }}" class="">
                    {% if section.settings.logoDestopWidth == blank %}
                        {% assign logoDestopWidth = 115 %}
                    {% else %}
                        {% assign logoDestopWidth = section.settings.logoDestopWidth %}
                    {% endif %}
                    
                    {% if section.settings.logoMobileWidth == blank %}
                        {% assign logoMobileWidth = 115 %}
                    {% else %}
                        {% assign logoMobileWidth = section.settings.logoMobileWidth %}
                    {% endif %}

                    <img src="{{ section.settings.logoDestop | image_url: width: logoDestopWidth  }}" alt="{{ "" }}" class="header__logoDestop" />
                    <img src="{{ section.settings.logoMobile | image_url: width: logoMobileWidth  }}" alt="{{ "" }}" class="header__logoMobile" />
                </a>
            </div>
            <div class="header__account">
                <a href="{{ routes.account_url }}}" class="">
                    <img src="{{ section.settings.iconUser | image_url }}" class="header__account-iconUser"/>
                </a>
                <a href="{{ routes.cart_url }}" class="">
                    <img src="{{ section.settings.iconCart | image_url }}" class="header__account-iconCart" />
                </a>
            </div>
            <div class="header__contactAndCart">
                <div class="header__contact">
                    <div class="header__contact-icon">
                        <img src="{{ section.settings.iconContact | image_url }}" class="header__contact-iconContact" />
                    </div>
                    <div class="header__contact-number">{{ section.settings.contact_text }}</div>
                </div>
                <div class="header__myCart">
                    <div class="header__myCart-icon">
                        <img src="{{ section.settings.iconCart | image_url }}" class="header__account-iconCart"/>
                    </div>
                    <div class="header__myCart-text">{{ section.settings.cart_text }}</div>
                </div>
            </div>
            <div class="menuMobile__container">
                <div class="menuMobile__header">
                    <span class="menuMobile__header-title">{{ 'sections.header.menu' | t }}</span>
                    <div class="menuMobile__header-icon">
                        {% render 'icon-close' %}
                    </div>
                </div>
                <div class="menuMobile__content">
                    <ul class="menuMobile__menuShow">
                        <li class="menuMobile__menuShow-option">
                            <a href="{{ routes.root_url }}" class="">Front-loading Refrigeration</a>
                        </li>
                        <li class="menuMobile__menuShow-option">
                            <a href="{{ routes.root_url }}" class="">Front-loading Refrigeration</a>
                        </li>
                        <li class="menuMobile__menuShow-option">
                            <a href="{{ routes.root_url }}" class="">Front-loading Refrigeration</a>
                        </li>
                        <li class="menuMobile__menuShow-option">
                            <a href="{{ routes.root_url }}" class="">Front-loading Refrigeration</a>
                        </li>
                        <li class="menuMobile__menuShow-option">
                            <a href="{{ routes.root_url }}" class="">Front-loading Refrigeration</a>
                        </li>
                        <li class="menuMobile__menuShow-option">
                            <a href="{{ routes.root_url }}" class="">Front-loading Refrigeration</a>
                        </li>
                        <li class="menuMobile__menuShow-option">
                            <a href="{{ routes.root_url }}" class="">Front-loading Refrigeration</a>
                        </li>
                        <li class="menuMobile__menuShow-option">
                            <a href="{{ routes.root_url }}" class="">Front-loading Refrigeration</a>
                        </li>
                        <li class="menuMobile__menuShow-option">
                            <a href="{{ routes.root_url }}" class="">Front-loading Refrigeration</a>
                        </li>
                    </ul>
                </div>
                <div class="menuMobile__footer">
                    <div class="menuMobile__contact">
                        <div class="menuMobile__contact-icon">
                            {% render 'icon-contact' %}
                        </div>
                        <div class="menuMobile__contact-text">{{ 'sections.header.contact' | t }}</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header__productSearch">
            <div class="header__productMenu">{{ 'sections.header.product' | t }}</div>
            <input type="text" placeholder="{{ 'sections.header.search' | t }}" class="header__productSearch-input">
        </div>
    </div>
    <div class="menuMobile">
        <div class="menuMobile__overlay"></div>

    </div>
</header>

{% schema %}
    {
        "name": "Header",
        "settings":[
            {
                "type":"header",
                "content":"Header Customize"
            },
            {
                "type":"header",
                "content":"Setting Logo"
            },
            {
                "type":"image_picker",
                "id":"logoDestop",
                "label":"Choose logo when show in Destop Screen: "
            },
            {
                "type":"text",
                "id":"logoDestopWidth",
                "label": "Logo destop width: "
            },
            {
                "type":"image_picker",
                "id":"logoMobile",
                "label":"Choose logo when show in Mobile Screen: "
            },
            {
                "type":"text",
                "id":"logoMobileWidth",
                "label": "Logo mobile width: "
            },
            {
                "type":"header",
                "content":"Setting Svg+Content"
            },
            {
                "type":"image_picker",
                "id":"iconContact",
                "label": "Choose icon for contact: "
            },
            {
                "type":"text",
                "id":"contact_text",
                "label":"Your contact:",
                "default":"+1 (305) 999 5212"
            },
            {
                "type":"image_picker",
                "id":"iconCart",
                "label": "Choose icon for cart: "
            },
            {
                "type":"text",
                "id":"cart_text",
                "label":"Your text cart:",
                "default":"My cart"
            },
            {
                "type":"image_picker",
                "id":"iconUser",
                "label": "Choose icon for user: "
            },
            {
                "type":"image_picker",
                "id":"iconMenu",
                "label": "Choose icon for menu: "
            }
        ]
    }
{% endschema %}