<link rel="stylesheet" href="{{ 'homeCategories.css' | asset_url }}">
<section class="homeCategories">
    <div class="homeCategories__inner">
        <div class="homeCategories__title">{{ section.settings.title }}</div>
        {%- assign fsArr = section.settings.title_fs | split: "," -%}

        {%- style -%}
            {%- assign limitPerRow = section.settings.limitPerRow | split: "," -%}
            @media(min-width: 320px){
                .homeCategories__title{
                    font-size: {{ fsArr[0] }} ;
                    font-weight: {{ section.settings.title_fw }};
                }
            }
            @media(min-width: 600px){
                .homeCategories__title{
                    font-size: {{ fsArr[1] }} ;
                }
            }
            @media(min-width: 1440px){
                .homeCategories__title{
                    font-size: {{ fsArr[2] }} ;
                }
            }
        {%- endstyle -%}
        <div class="homeCategories__content">
            {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'collection' %}
                    {% assign collection = collections[block.settings.collection] %}
                    {% render 'category-card' with collection as collection %}
                {% endcase %}
              {% endfor %}
        </div>
    </div>
</section>
{% schema %}
    {
        "name": "Featured Collection",
        "tag": "section",
        "presets": [
            {
              "name": "Featured Collection"
            }
        ],
        "settings":[
            {
                "type":"header",
                "content":"Title"
            },
            {
                "type":"text",
                "id":"title",
                "label":"Adjust title: "
            },
            {
                "type":"text",
                "id":"title_fs",
                "label":"Adjust font size: ",
                "info":"E.g: 20px,24px,30px - Mobile screen, Tablet screen, Destop screen "
            },
            {
                "type":"range",
                "id":"title_fw",
                "min":100,
                "max": 800,
                "step":100,
                "default":700,
                "label":"Adjust font weight: "
            },
            {
                "type":"header",
                "content":"Container"
            },
            {
                "type":"text",
                "id": "limitPerRow",
                "label":"Items per row: ",
                "info": "E.g: 2,3,4,5,6 - 320px - 600px - 800px - 1000px - 1280px"
            }
        ],
        "blocks":[
            {
                "name":"Collection",
                "type":"collection",
                "settings":[
                    {
                        "type": "collection",
                        "id": "collection",
                        "label": "Choose your collection: "
                    },
                    {
                        "type": "checkbox",
                        "id":"checkImg",
                        "label":"Use another picture for collection",
                        "default":false
                    },
                    {
                        "type": "image_picker",
                        "id":"imgCollection",
                        "label": "Choose another picture for collection: "
                    }
                ]
            }
        ]
    }
{% endschema %}