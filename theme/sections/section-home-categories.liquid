<link rel="stylesheet" href="{{ 'homeCategories.css' | asset_url }}">
<section class="homeCategories">
    <div class="homeCategories__inner">
        <div class="homeCategories__title">SHOP BY CATEGORIES</div>
        <div class="homeCategories__content">
            {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'collection' %}
                    {% assign collection = collections[block.settings.collection] %}
                    {% render 'category-card' with collection as collection %}
                {% endcase %}
              {% endfor %}
        </div>
    </div>
</section>
{% schema %}
    {
        "name": "Categories List",
        "tag": "section",
        "presets": [
            {
              "name": "Categories List"
            }
        ],
        "settings":[
            {
                "type":"header",
                "content":" xxxxx"
            },
            {
                "type":"image_picker",
                "id":"image",
                "label":"choose image:"
            }
        ],
        "blocks":[
            {
                "name":"Collection",
                "type":"collection",
                "settings":[
                    {
                        "type": "collection",
                        "id": "collection",
                        "label": "Choose your collection: "
                    }
                ]
            }
        ]
    }
{% endschema %}