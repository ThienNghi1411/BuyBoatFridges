<link rel="stylesheet" href="{{ 'product-card.css' | asset_url }}">
<div class="productCard">
    <div class="productCard__imgCont">
        <a href="{{ product.url }}" class="">
            {% if product.featured_image != blank %}
                <img src="{{ product.featured_image | image_url }}" alt="{{ "" }}" />
            {% else %}
                {{ 'product-1' | placeholder_svg_tag }}
            {% endif %}
        </a>
        <div class="productCard__imgCont-tagCont">
            {% if product.compare_at_price > product.price %}
                {% assign floatNum = product.price | times: 1.0 %}    
                {% assign percentSale = product.compare_at_price | divided_by: floatNum | times: 100 | minus: 100 | round %}
                <div class="productCard__imgCont-tagCont-text">SALE {{ percentSale }}%</div>
            {% endif %}
        </div>
    </div>
    <div class="productCard__productInfo">
        <div class="productCard__productTitle">
            <div class="productCard__vendor">{{ product.vendor }}</div>
            <div class="productCard__productSKU"><a href="{{ product.url }}" class="">{{ product.variants[0].sku }}</a></div>
            <div class="productCard__productName">
                {{ product.title }}
            </div>
        </div>
        <div class="productCard__priceCont">
            <div class="productCard__priceCont-wrap">
                <div class="productCard__priceCont-salePrice">{{ product.compare_at_price | money }}</div>
                <div class="productCard__priceCont-basePrice">{{ product.price | money }}</div>
            </div>
            <button class="productCard__priceCont-btnAdd">
                <a href="{{ routes.root_url }}" class="">ADD TO CART</a>
            </button>
        </div>
    </div>
</div>

